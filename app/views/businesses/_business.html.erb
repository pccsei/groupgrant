<%= link_to(business) do %>
   <div class="media user_about_block" style="margin-bottom:10px;">
        <% if business.user.profile.url.include? "missing" %>
          <%= image_tag business.business_pic.url(:medium), class: 'pull-left media-object charity_partial_pic' %>
        <% else %>
          <%= image_tag business.user.profile.url(:medium), class: 'pull-left media-object charity_partial_pic' %>
        <% end %>
      <div class="media-body">
         <h4 class="media-heading"><%= highlight(business.name, params['search']) %><small><em> 
                                   <%= business.business_category.name %></em></small></h4>
         <div class="description"><%= highlight(business.description, params['search']) %></div>
      </div>
    </div>
<% end %>

<div style = "height: 1px; margin: 10px 0 10px 0; background-color:#ddd;clear:both"></div>


