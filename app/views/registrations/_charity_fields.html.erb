<h4>About your charity</h3>

<div class="form-group">
   <%= f.label :category_id, "Charity Category ", class: 'col-sm-2 control-label' %>
   <div class="col-sm-10">
      <%= f.collection_select :category_id, CharityCategory.all, :id, :name, options = {:include_blank => 'Select a category...'}, html_options = {:class => 'form-control'} %>
   </div>
</div>

<div class="form-group">
   <%= f.label :name, "Organization Name", class: 'col-sm-2 control-label' %>
   <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
   </div>
</div>


<div class="form-group">
   <%= f.label :eid, "Employee Identification Number (EIN)", class: 'col-sm-2 control-label' %>
   <div class="col-sm-10">
      <%= f.text_field :eid, class: 'form-control' %>  
   </div>
</div>

<div class="form-group">
   <%= f.label :description, "Describe your Organization in 1000 words or less.", class: 'col-sm-2 control-label' %>
   <div class="col-sm-10">
      <%= f.text_area :description, size: "60x5", class: 'form-control' %>
   </div>
</div>

<div class="form-group">
   <%= f.label :video_url, "Paste a video url to represent your company.", class: 'col-sm-2 control-label' %>
   <div class="col-sm-10">
      <%= f.text_field :video_url, class: 'form-control' %>
   </div>
</div>

<div class="form-group">
   <%= f.label :mission_statement, "Paste your charity's mission statement.", class: 'col-sm-2 control-label' %>
   <div class="col-sm-10">
      <%= f.text_field :mission_statement, class: 'form-control' %>
   </div>
</div>

<div class="form-group">
   <%= f.label :target_area, "What area or people does your charity target helping?", class: 'col-sm-2 control-label' %>
   <div class="col-sm-10">
      <%= f.text_field :target_area, class: 'form-control' %>
   </div>
</div>