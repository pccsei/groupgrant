<h2>Edit <%= resource.user.rolable_type.to_s.humanize %></h2>

<%= form_for(resource, :as => resource.class.name.downcase, :url => registration_path(resource_name), :html => {class: "form-horizontal", role: "form", :method => :put, :multipart => true }) do |f| %>
<%= my_devise_error_messages! %>
  <%= f.fields_for :user,  resource.user do |builder| %>
    <%= render :partial => "user_fields", :locals => { :f => builder } %>
  <% end %>

 <% if !current_user.user.rolable_type.nil? %>
   <%= fields_for resource.user.rolable_type do |rf| %>
       <% render :partial => resource.user.rolable_type.underscore + "_fields", :locals => { :f => f, :rolable_type => resource } %>
   <% end %>
 <% end %>
<br>
  <div><%= f.submit "Update", :class => 'col-md-3' %></div>
<% end %>
<br><br>
<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

<%= link_to "Back", :back %>

