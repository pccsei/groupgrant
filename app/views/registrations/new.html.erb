<%
  # customized code begin
   begin
      params[:user][:user_type] ||= 'donor'
   rescue
      params[:user] = {}
      params[:user][:user_type] = "donor"
   end
  if ["donor", "charity", "business"].include? params[:user][:user_type].downcase
    child_class_name = params[:user][:user_type].downcase.camelize
    user_type = params[:user][:user_type].downcase
  else
    child_class_name = "donor"
    user_type = "donor"
  end

  resource.rolable_type = child_class_name.constantize.new if resource.rolable_type.nil?

  # customized code end
%>
<h2><%= user_type.humanize %> sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <%= f.label :email, "Email", :class => 'span3 form_label' %> 
    <%= f.text_field :email, :class => 'span4 form_field' %>
  </div>

  <% if f.object.password_required? %>
    <div class="row">
      <%= f.label :password, "Password", :class => 'span3 form_label' %> 
      <%= f.password_field :password, :class => 'span4 form_field' %>
    </div>

    <div class="row">
      <%= f.label :password_confirmation, "Password confirmation", :class => 'span3 form_label' %> 
      <%= f.password_field :password_confirmation, :class => 'span4 form_field' %>
    </div>
  <% end %>

  <div class="row">
    <%=f.label :profile, "Profile Picture", :class => 'span3 form_label' %> 
    <%= f.file_field :profile, :class => 'span4 form_field' %>
  </div>   

 <% if ["donor", "charity", "business"].include? params[:user][:user_type].downcase %>
   <%= fields_for resource.rolable_type do |rf| %>
       <% render :partial => "#{child_class_name.underscore}_fields", :locals => { :f => rf, rolable_type: resource.rolable_type } %>
   <% end %>
 <% end %>

  <%= hidden_field :user, :user_type, :value => user_type %>
  <br>
  <div><%= f.submit "Sign up", :class => 'span7' %></div>
<% end %>

<%- if controller_name != 'sessions' %>
  <%= link_to "Already have an account? Click to sign in", new_session_path(resource_name) %><br />
<% end -%>



