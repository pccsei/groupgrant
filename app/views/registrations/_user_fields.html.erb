<div id="formgroup1">
<div class="form-group">
   <%= f.label :profile, :class => 'col-sm-2 control-label', style: "margin-top: 15x;" %>
      <%=  image_tag(f.object.profile.url(:thumb), class: 'col-sm-2 col-md-1') %>
   <div class="col-sm-8 col-md-4"  style="margin-top: 15px;">
      <%= f.file_field :profile, :class => 'form-control' %>
   </div>
</div>
<%= f.input :email, placeholder: 'Example: groupgrant@domain.com' %>
<%= f.input :password, :autocomplete => "off", required: true %>
<%= f.input :password_confirmation, required: true %>

<% if :rest == 'put' && current_user.encrypted_password.present? %>
   <div class="form-group">
      <%= f.label :current_password, :class => 'col-sm-2 control-label' %> 
      <div class="col-sm-10">
         <%= f.password_field :current_password, :class => 'form-control' %>
      </div>
   </div>
<% end %>

<%= f.input :phone, placeholder: 'Example: 850-231-0415' %>

<% if resource.rolable_type.to_s.humanize != "Donor" %>
   <div class="btn btn-md btn-primary col-md-1 col-md-offset-6" id="next_button" >Next</div>
<% end %>

</div>

