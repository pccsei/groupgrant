<h1>Listing messages</h1>
<% if @messages.empty? %>
  <div>There are no messages</div>
<% end %>

<!-- Friend table -->
<div class="col-xs-3 col-md-3">
<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Friends</th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><div class="friend"><%= friend.email %> <%= friend.id %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<!-- Messages table -->
<div class="col-xs-6 col-md-6">
<table>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td <% if message.user_sent_id != current_user.rolable.id %> class="active" <% end %> >
          <%= message.user_received_id %>
        </td>
        <td><%= message.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Message', new_message_path %>