<h1>Messages</h1>
<% if @messages.empty? %>
  <div>There are no messages</div>
<% end %>

<!-- Friend table -->
<div class="col-xs-3 col-md-3" id="friends">
<table class="table table-hover">
  <thead>
    <tr>
      <!-- <th>Friends</th> -->
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><div class="friend" data-user=<%= friend.id %>><%= friend.email %> </div></td>
      </tr>
    <% end %>

