<!-- Load Facebook SDK-->
<div id="fb-root"></div>

<!-- beginning of row 1 -->
<div class="row">
<!-- Row that includes Charity picture, name, mission statement, and description -->

  <div class="col-md-1">
  <!-- I made this so things would be centered -->
  </div>

  <div class="col-md-4">
  <!-- Charity picture -->
    <%= image_tag @charity.charity_pic.url(:small),  class:"col-md-3" %>
  </div>
  <div class="col-md-7">
  <!-- Charity name, mission statement, and description -->
    <div class="title"><%= @charity.name %></div>
    <div><%= @charity.mission_statement %></div>
    <div><%= @charity.description %></div>   
    <% if user_signed_in? && current_user.rolable_type == "Charity" && current_user.rolable_id == @charity.id %>     
      <%= link_to 'Edit Page', edit_user_registration_path, class: "btn btn-primary btn-md" , style: "float:right; margin:5px;"%>
   <% end %>
  </div>

  <div class="col-md-1">
  <!-- I made this so things would be centered -->
  </div>

</div> 
<!-- end of row 1 -->

<!-- beginning of row 2 -->
<div class="row">
<!-- Row that includes contact details, category, groupgrants, etc. -->
  <div class="col-md-1">
  <!-- I made this so things would be centered -->
  </div>

  <div class="col-md-4">
  <!-- Contact details -->
    <br><h4><%= "Contact Information:" %></h4>
            <%= "(Phone Number)" %>
        <br><%= "(Address)" %>
        <br><%= "(Address continued)" %>

    <div class = "row">
    <!-- Social media icons -->
      <div class = "col-md-11">
        <div class = "col-md-3 social-media-icons automargin">
           <table>
              <tr>
                 <td>                                                     
                    <!-- Show Tweet Button -->
                    <div id="tweets" ></div>
                 </td>
              </tr>
              <tr>
                 <td>
                    <!-- Show Facebook button -->
                    <div id="sharePage"></div>                
                 </td>
              </tr>
           </table> 
        </div>
      </div>
      <div class = "col-md-1">
      <!-- Connection request for Business to Charity -->
        <% if user_signed_in? && current_user.rolable.class.name == "Business" %>
            <button class="btn btn-primary" tabindex="1" data-toggle="modal" data-target="#myModal">Send Message</button>
              <div class="modal fade" id="myModal">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                      <h4 class="modal-title">Message</h4>
                    </div>
                    <div class="modal-body">
                       <div class="input-group">
                          <form>
                             <input type="text" class="form-control" id="chat_message">
                                <span class="input-group-btn">
                                   <button class="btn btn-primary" type="submit" id="send_message">Send</button>
                                </span>
                          </form>
                       </div>
                    </div>
                    <div class="modal-footer">
                    </div>
                  </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
              </div><!-- /.modal -->
        <% end %>
      </div><!-- col-md-1 -->
    </div><!-- row -->
  </div><!-- col-md-4 -->

  <div class="col-md-7">
    <% if @charity.groupgrants.count > 0 %>
      <h3>Support our cause</h3>
      <br />
      <div class="charity_groupgrants">
        <%= render :partial => '/groupgrants/groupgrant', collection: @charity.groupgrants %>
      </div>
   <% end %>
  </div>

  <div class="col-md-1">
  <!-- I made this so things would be centered -->
  </div>

</div>
<!-- end of row 2 -->

<!-- START NEW GROUPGRANT LINK -->
<% if user_signed_in? && current_user.rolable_type == "Charity" && current_user.rolable_id == @charity.id %>
  <%= link_to 'Start a new groupGrant', new_groupgrant_path, class: "btn btn-primary btn-md", style: "float: right; margin:5px;"%> 
<% end %>
<!-- START NEW GROUPGRANT LINK -->

<%= javascript_include_tag("facebook_twitter_api.js") %>