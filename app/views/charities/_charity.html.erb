<%= link_to(charity) do %>
   <div class="media" style="margin-bottom:10px;">
      <img class="pull-left media-object charity_partial_pic"          
          <% if charity.user.profile.url.include? "missing" %>
             <%= image_tag charity.charity_pic.url(:medium), class: 'col-md-4' %>
          <% else %>
             <%= image_tag charity.user.profile.url(:medium), class: 'col-md-4' %>
          <% end %>
      <div class="media-body">
         <h4 class="media-heading"><%= highlight(charity.name, params['search']) %><small><em> 
                                   <%= charity.mission_statement %></em></small></h4>
         <div><%= highlight(charity.description, params['search']) %></div>
      </div>
    </div>
<% end %>