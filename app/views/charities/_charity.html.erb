<%= link_to(charity) do %>
   <div class="charity_index_single row">
      <div class="span3" style="clear:both;"><%= image_tag charity.user.profile.url(:medium) %></div>
      <div class="span6"><b>Name:</b> <%= highlight(charity.name, params['search']) %><br>
      <% if !charity.charity_category.nil? %>
         <b>Category:</b> <%= charity.charity_category.name %>
      <% end %>
      <br><br>
      <b>Description:</b> <%= highlight(charity.description, params['search']) %></div>
   </div>
<% end %>

<div style = "height: 5px; margin: 10px 0 10px 0; background-color:#ddd;clear:both"></div>