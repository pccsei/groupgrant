<%= link_to(groupgrant) do %>
<!--   <div class="groupgrant_index_single row"> -->
    <div class="col-xs-6 col-sm-6 col-md-4" style="height:360px; padding:0 25px 0 25px; max-width:300px">
      <%= image_tag 'ribbon.png', class: "groupgrant_ribbon" %>
      <div class="ellipsis_gg_title groupgrant_title"><div><%= groupgrant.name %></div></div>
      <div class="thumbnail">

        <%= image_tag groupgrant.groupgrant_pic.url(:medium), class: "groupgrant_image", style:"max-height:140px;" %>

        <div class="caption">
          <div class="ellipsis_gg_about groupgrant_description"><div><%= groupgrant.description %></div></div>
          <div class="progress progress-striped">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 75%;">
            <span class="sr-only">40% complete</span>
            </div>
          </div>
          <p><a href="" class="btn btn-primary" role="button">Donate</a></p>

        </div>

      </div>

    </div>

<!--   </div> -->
<% end %> 