<%= link_to(groupgrant) do %>

  <div class="col-xs-6 col-md-6" style=" margin:0 0px 0 20px; width:250px; float:left;">
    <div class="thumbnail" style="background-color:#E6E6E6;">
     
      <%= image_tag groupgrant.groupgrant_pic.url(:medium), class: "groupgrant_image", style:":block;" %>

      <div class="caption">
        
        <div class="ellipsis_gg_title groupgrant_title"><%= groupgrant.name %></div>
         </div>
        <div class="groupgrant_charity"><%= groupgrant.charity.name %></div>
        <div class="progress_bar"><input type="text" value="75" class="dial" data-displayInput="true" data-width="80" data-height="40" readOnly="true" data-fgColor="#003399" data-thickness=".3" data-fgColor="#66CC66" data-angleOffset=-75 data-angleArc=150>
          <div class="groupgrant_goal">
            <%= number_to_currency(groupgrant.goal_amount, :precision => 0, :delimiter => ',') %> Goal
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>