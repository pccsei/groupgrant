<div class = "row">
   <%= form_tag "/groupgrants", :method => 'get', :class => "input-append span3" do %>
      <%= text_field_tag :search, params[:search], :class => "appendedInputButtons", :style => "width: 70%;" %>
      <%= submit_tag "Search", :name => nil, :class => "btn", :type => "submit" %>
   <% end %>
</div>

<h1>Active groupGrants</h1>
<div class = "row">
   	<div class = "col-sm-3">
      	<ul class="nav nav-pills nav-stacked">
        <li <% if 0 == @category_id.to_i %> class="active"  <% end %>>
            <%= link_to(url_for(:controller => "groupgrants", :action => "index")) do %>
            <%= 'All' %> <span class="badge pull-right"><%= @category_count['all'].to_s %></span>
        <% end %>
        </li>

         <% @categories.each do |c| %>
        <li <% if c.id == @category_id.to_i %> class="active"  <% end %>>
            <%= link_to(url_for(:controller => "groupgrants", :action => "index", :category => c.id)) do %>
            <%= c.name %> <span class="badge pull-right"><%= @category_count[c.id].to_s %></span>
            <% end %>
        </li>
        <% end %>
        </ul>
    </div>
  <div class = "col-sm-9">
    	<%= render partial: "groupgrant", collection: @groupgrants %>  	
  </div>
</div>
<div class = "row">
  <div class = "span12">
      <%= link_to 'Start a new Groupgrant', new_groupgrant_path %>
  </div>
</div>  