<%= simple_form_for(@groupgrant) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: "Give your groupGrant a name" %>
    <%= f.input :description, label: "Describe what your groupGrant is for" %>
    <%= f.input :goal_date, label: "What date do you need your groupGrant completed?" %>
    <%= f.input :goal_amount, label: "How much money is needed for your groupGrant?" %>
    <%= f.input :video_url, label: "Attach a video URL to your groupGrant" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: "Save groupGrant" %>
  </div>
<% end %>