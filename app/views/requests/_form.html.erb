<%= simple_form_for(@request) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :is_accepted %>
    <%= f.input :is_rejected %>
    <%= f.input :date %>
    <%= f.input :date_responded %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
